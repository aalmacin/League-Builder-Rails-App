= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :team_id
    = f.number_field :team_id
  .field
    = f.label :free_agency
    = f.number_field :free_agency
  .field
    = f.label :jersey_number
    = f.number_field :jersey_number
  .field
    = f.label :position
    = f.text_field :position
  .actions
    = f.submit 'Save'
