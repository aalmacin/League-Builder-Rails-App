= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :team
    = select :player,:team_id, teams
  .field
    = f.label :free_agency
    = select :player, :free_agency, current_year..(current_year+6)
  .field
    = f.label :jersey_number
    = select :player, :jersey_number, 00..99
  .field
    = f.label :rating
    = select :player, :rating, 70..99
  .field
    = f.label :years
    = select :player, :rating, 0..30
  .field
    = f.label :position
    = f.text_field :position
  .actions
    = f.submit 'Save'
